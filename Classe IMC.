package imc;

import java.util.Scanner;

/**
 *
 * @author Marino
 */
public class IMC {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner imc = new Scanner(System.in);
        System.out.println("Qual o seu Nome, querido Usuário??");
        String nome = imc.next();
        System.out.println("Qual o seu Peso??, querido Usuário");
        Double peso = imc.nextDouble();
        System.out.println("Qual é a sua Altura, querido Usuário??");
        Double altura = imc.nextDouble();
        Double imc1;
        imc1 = peso/(altura*altura);
        System.out.println("O Resultado do IMC é: " + imc1 + "Querido Usuário!");
        System.out.println("Obrigado!");
    }   
}
